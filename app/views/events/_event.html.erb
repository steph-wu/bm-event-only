<div class="location">
  <h3>City: <%= location.city %></h3>
  <%= location.description %>
  <%= link_to image_tag(location.image, class: "location"), location %>
</div>

<p>
  Event Name: <%= event.name %><br>
  Date: <%= event.date %>
</p>

<p>
  <%= link_to 'View Event', location_event_path(@location, event) %>
</p>
